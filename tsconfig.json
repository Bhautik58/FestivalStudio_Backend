{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowImportingTsExtensions" : true,
        "noEmit" : true
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "esm": true
    },
}